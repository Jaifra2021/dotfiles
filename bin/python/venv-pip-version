#!/usr/bin/env bash

env_name=$1
[[ -z "$env_name" ]] && env_name="venv"
[[ ! -d $env_name ]] && echo 0 && exit
pip_version=$($env_name/bin/pip3 --version | egrep -o 'pip (\d+)' | cut -c 5-)
[[ -z "$pip_version" ]] && pip_version=$($env_name/bin/pip3 --version | perl -pe 's/^pip\s+(\d+).*/$1/')
echo $pip_version
