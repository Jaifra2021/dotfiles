#!/usr/bin/env bash
#
# Cleanup local references to old remote branches

path=$1
[[ -z "$path" ]] && path=$(pwd)
path=$(repo-path $path)
[[ -z "$path" ]] && exit 1
cd $path

remote=$(repo-remote $path)
branch=$(branchname)
echo -e "\n===============\n$path -- $remote -- $branch"
git fetch --all --prune
