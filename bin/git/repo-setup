#!/usr/bin/env bash

# Exit script if not supplied with path, or not called from a path in a git repository
path=$1
[[ -z "$path" ]] && path=$(pwd)
path=$(repo-path $path)
[[ -z "$path" ]] && exit 1
cd $path

branch=$(branchname)
if [[ -f setup.bash ]]; then
    echo -e "\n===============\n$path -- $branch"
    bash ./setup.bash
fi
