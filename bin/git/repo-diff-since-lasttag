#!/usr/bin/env bash
#
# Display diff from lasttag through latest commit

path=$1
[[ -z "$path" ]] && path=$(pwd)
path=$(repo-path $path)
[[ -z "$path" ]] && exit 1
cd $path

the_tag=$(lasttag)
if [[ -n "$the_tag" ]]; then
    git diff ${the_tag}..
else
    echo -e "\nThere was no last tag for the repo"
fi
